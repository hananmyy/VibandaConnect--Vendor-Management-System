<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css" />
    <script
      src="https://kit.fontawesome.com/713c9e8f48.js"
      crossorigin="anonymous"
    ></script>
    <title>Login Page</title>
  </head>
  <body class="bg-white">
    <%- include('layouts/header'); -%> <%- include('layouts/footer'); -%>

    <% if (typeof successMessage === 'string' || typeof error === 'string' ) { %>
    <div id="flash-messages"
      class="fixed top-0 left-0 right-0 mt-4 mx-auto w-11/12 z-50">
      <% if (typeof successMessage === 'string') { %>
        <div class="flash-success bg-teal-500 text-white text-center py-2 mb-4">
          <%= successMessage %>
        </div>
      <% } %>
      <% if (typeof error === 'string') { %>
      <div class="flash-error bg-red-500 text-white text-center py-2 mb-4">
        <%- console.log('Flash Error:', error) %>
        <%= error %>
      </div>
      <%- console.log('Flash Error:', error) %>
      <% } %>
    </div>
    <% } %>

    <form action="/user/login" method="POST">
      <div class="flex justify-center items-center h-screen">
        <div class="w-96 p-6 shadow-lg bg-slate-200 rounded-md">
          <h1 class="text-3xl block text-center font-semibold">
            <i class="fa-solid fa-user pr-2"></i>Login
          </h1>
          <hr class="mt-3" />
          <div class="mt-3">
            <label for="email" class="block text-base mb-2"
              >Email Address</label
            >
            <input
              type="text"
              id="email"
              name="email"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Email Address..."
            />
          </div>
          <div class="mt-3">
            <label for="password" class="block text-base mb-2">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="border w-full text-base px-2 py-1 focus:outline-none focus:ring-0 focus:border-gray-600 bg-white"
              placeholder="Enter Your Password..."
            />
          </div>

          <div class="mt-3">
            <select name="loginRole" id="loginRole" class="w-full" required>
              <option value="" disabled selected>Select Role</option>
              <option value="vendor">Vendor</option>
              <option value="rider">Rider</option>
              <option value="customer">Customer</option>
            </select>
          </div>
          <div class="mt-5 justify-center">
            <input type="checkbox" />
            <label>Remember Me</label>
          </div>

          <div class="mt-5">
            <button
              type="submit"
              class="border-2 border-teal-200 bg-teal-700 text-white py-1 w-full rounded-md hover:bg-transparent hover:text-teal-700 font-semibold"
            >
              Login<i class="fa-solid fa-right-to-bracket pl-2"></i>
            </button>
          </div>
        </div>
      </div>
    </form>
    <script src="/js/scripts.js"></script>
  </body>
</html>
